{% extends 'KaymoreyPortfolioBackBundle::layout.html.twig' %}
{% block content %}
<div class="row">
	<div class="span12">
		<h3>Projets <small>AJOUTER UN PROJET</small></h3>
		<a class="btn btn-success" href="{{ path('portfolioback_projets') }}"><i class="icon-circle-arrow-left icon-white"></i> Retour aux projets</a>
		<hr />
		<form>
			<label for="title">Titre *</label>
			<input type="text" name="title" id="title" />
			<label for="category">Catégorie *</label>
			<select name="category" multiple="multiple" id="category">
				{% for categorie in categories %}
				<option value="{{ categorie.id }}">{{ categorie.titre }}</option>
				{% endfor %}
			</select>
			<label for="url">Url</label>
			<input type="text" name="url" id="url" />
			<label for="img">Image d'aperçu</label>
			<input type="file" name="img" id="img" />
			<label for="description">Description</label>
			<textarea name="description" id="description" class="input-xlarge" rows="4"></textarea>
			<label for="skills">Compétences</label>
			<input type="text" name="skills" id="skills" class="input-xlarge"/>
			<label><a href="#" class="dropdown-docs btn">Documents <i class="icon-circle-arrow-down"></i></a></label>
			<div class="dropdown-docs-div">Hello</div>
		</form>
	</div>
</div>
{% endblock %}
